<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="200dp"
              android:layout_height="300dp"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
            android:id="@+id/pager_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20dp" android:textAlignment="center"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_cpu" android:id="@+id/pager_image"/>
</LinearLayout>