<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/row_item_body">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/linearLayout2"
        >
            <TextView
                    android:text="Nazwa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvProductName"
                    android:layout_alignParentStart="true" android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp" android:layout_alignParentTop="true" android:textSize="18sp"
                    android:layout_toStartOf="@+id/ivProductPhoto" android:layout_marginEnd="8dp"/>
            <ImageView
                    android:layout_width="128dp"
                    android:layout_height="128dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/ivProductPhoto" android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp" android:layout_alignParentTop="true"
                    android:layout_marginEnd="16dp"/>
            <TextView
                    android:text="KrÃ³tki opis produktu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tvProductDesc"
                    android:layout_below="@+id/tvProductName" android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/bCheck"
                    android:layout_alignBottom="@+id/bCheck"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Cena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvProductPrice"
                    android:layout_below="@+id/ivProductPhoto"
                    android:layout_marginTop="8dp" android:textSize="24sp" android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:layout_toEndOf="@+id/tvProductDesc"/>
            <Button
                    android:text="WYBIERZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/bCheck" android:layout_weight="1"
                    android:textSize="14sp"
                    android:layout_below="@+id/tvProductPrice"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:layout_alignStart="@+id/ivProductPhoto"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>