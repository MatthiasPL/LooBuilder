<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainMenuActivity" android:orientation="vertical"
            android:background="@color/design_default_color_background">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="2">
            <androidx.gridlayout.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:columnCount="1"
                    app:rowCount="3"
                    app:alignmentMode="alignMargins"
                    android:padding="8dp"
                    app:columnOrderPreserved="false"
            >

                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        app:cardBackgroundColor="@color/design_default_color_background" android:clickable="true"
                        android:foreground="?attr/selectableItemBackground" android:id="@+id/cardObudowa">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout"
                            android:foreground="?attr/selectableItemBackground">
                        <TextView
                                android:text="Obudowa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvObudowa"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_computer"
                                android:id="@+id/imageView3"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardProcesor">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Procesor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/tvProcesor"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_cpu"
                                android:id="@+id/imageView4"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardPlytaGlowna">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Płyta główna"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvPlytaGlowna"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_motherboard"
                                android:id="@+id/imageView5"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardRAM">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Pamięć RAM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvRAM"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_ram"
                                android:id="@+id/imageView6"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardKartaGraficzna">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Karta graficzna"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvKartaGraficzna"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_graphics_card"
                                android:id="@+id/imageView7"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardChlodzenie">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Chłodzenie"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvChlodzenie"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_fan"
                                android:id="@+id/imageView8"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardDysk">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Dysk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvDysk"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_harddisk"
                                android:id="@+id/imageView9"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        app:layout_columnWeight="1"
                        app:layout_rowWeight="1"
                        android:layout_margin="8dp" app:cardElevation="4dp" app:cardCornerRadius="4dp"
                        android:clickable="true" android:foreground="?attr/selectableItemBackground"
                        android:id="@+id/cardZasilacz">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/linearLayout">
                        <TextView
                                android:text="Zasilacz"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="20dp"
                                android:textSize="24sp" android:id="@+id/tvZasilacz"
                                android:textColor="@color/design_default_color_on_secondary"/>
                        <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp" app:srcCompat="@drawable/ic_charger"
                                android:id="@+id/imageView10"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="20dp"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.gridlayout.widget.GridLayout>
        </ScrollView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>